{
  "compilerOptions": {
    "module": "ESNext", 
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,    
    "paths": {
      "@handlers/*": ["handlers/*"]
    },
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7"
    ]
  },
  "include": [
    "**/*.ts"
  ]
}
